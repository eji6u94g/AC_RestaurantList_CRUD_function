<form action="/restaurants/{{restaurant._id}}/edit" method='POST'>
  <ul>
    {{#each restaurant}}
    {{#if this.length}}
    <li>
      <label for="{{@key}}">{{@key}}</label>
      <input type="text" value='{{this}}' name='{{@key}}'>
    </li>
    {{/if}}
    {{/each}}
  </ul>
  <button type="submit">Save</button>
</form>
<a href="/">Back to list</a>